<% if(book != null ) { %>

  <div class="row">

    <div class="col-12 col-md-4">
      <img src="/book/<%= book._id %>/image" class="img-fluid sticky-top" style="top: 20px;" alt="<%- book.name %>" loading="lazy">
    </div>

    <div class="col-12 col-md-8">
      <div class="row">
        <div class="col-12"><h1><%- book.name %></h1></div>
        <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- book.category %></div>
        <div class="col-12" style="white-space: pre-line;">
          <h4>Deskripsi Buku</h4>
          <%- book.description %>
        </div>
      </div>

      <div class="row pt-4">
        <div class="col-12">
          <h4>Ulasan</h4>
          <ul class="list-group list-group-flush">
            <% book.ulasan.forEach(function(ulasan, index){ %>
              <li class="list-group-item"><%= ulasan %></li>
            <% }) %>
          </ul> 
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <p>No item found.</p>
<% } %>