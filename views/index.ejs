<!-- BUAT LANDING PAGE -->
<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
  <div class="col-12 col-lg-6">
    <img src="/img/LandingPic.png" width="607" height="510" class="d-block mx-lg-auto img-fluid" loading="lazy" alt="Cooking With Node.js">
  </div>

  <div class="col-12 col-lg-6">
    <h1 class="display-5 fw-bold mb-3">Jelajah berbagai buku dari perpustakaan kami.</h1>
    <p class="lead">
      Selain membeli, Anda juga bisa menambahkan berbagai buku baru kedalam koleksi buku perpustakaan kami
    </p>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
      <a href="/explore-latest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Buku Terbaru</a>
  </div>

</div>

<!-- LIAT SEMUA BUKU -->
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">

  <a href="/view-all" class="col text-center category__link">
    <div class="category__img shadow">
      <img src="img/viewall.png" alt="View All Books" loading="lazy">
    </div>
    <div class="pt-1">All Books</div>
  </a>

  <a href="/all-categories" class="col text-center category__link">
    <div class="category__img shadow">
      <img src="img/viewall.png" alt="View All Categories" loading="lazy">
    </div>
    <div class="pt-1">All Categories</div>
  </a>

</div>

<!-- BUKU TERBARU-->
<section class="pb-4 pt-4">
  <div class="d-flex mb-2 align-items-center">
    <h2>Koleksi Buku Terbaru</h2>
    <a href="/explore-latest" class="ms-auto">View More</a>
  </div>

  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">

    <% if(cat != '') { %>
      <% cat.latest.forEach(function(book, index){ %>
      <a href="/book/<%= book._id %>" class="col text-center category__link">
        <div class="category__img category__img--large shadow">
          <img src="/book/<%= book._id %>/image" alt="<%= book.name %>" loading="lazy">
        </div>
        <div class="pt-1"><%= book.name %></div>
      </a>
      <% }) %>
    <% } else { %>
      <p>No books found.</p>
    <% } %>
  </div>

</section>
<!-- Latest End -->

<!-- Submit - Start -->
<section class="px-4 py-5 my-5 text-center bg-light">
  <img src="/img/footer.png" class="d-block mx-auto mb-4 img-fluid" alt="Publish your book for FREE today" width="566" height="208" loading="lazy">
  <h1 class="display-5 fw-bold">Tidak Menemukan Buku yang Anda Cari ?</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4">Anda Bisa Menambahkan Buku yang Anda Mau</p>
    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
      <a href="/submit-book" class="btn btn-primary btn-dark btn-lg">+ Tambah Buku</a>
    </div>
  </div>
</section>

<!-- Submit - End -->