<h1 class="pb-4">Semua Kategori</h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/index">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Categories</li>
  </ol>
</nav>

<% Object.keys(cat).forEach(function(category) { %>
  <section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
      <h2>Buku <%= category %></h2>
      <a href="/categories/<%= category %>" class="ms-auto">View More</a>
    </div>

    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
      <% if(cat[category] != '') { %>
        <% cat[category].forEach(function(book, index){ %>
        <a href="/book/<%= book._id %>" class="col text-center category__link">
          <div class="category__img category__img--large shadow">
            <img src="/book/<%= book._id %>/image" alt="<%= book.name %>" loading="lazy">
          </div>
          <div class="pt-1"><%= book.name %></div>
        </a>
        <% }) %>
      <% } else { %>
        <p>No books found.</p>
      <% } %>
    </div>
  </section>
<% }) %>