    <div class="form-container">
      <div class="cont">
        <h2>Login</h2>
        <% if (message) { %>
          <div class="alert <%= message.includes('successfully') || message.includes('created') ? 'alert-success' : 'alert-danger' %>">
              <%= message %>
          </div>
        <% } %>      
        <form action="/login" method="post">
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" placeholder="Type your email" value="<%= email %>" required>
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="Type your password" required>
            <a href="/forgot-password" class="link">Forgot Password?</a>
          </div>
          <button type="submit" class="submit-btn">Login</button>
        </form>
        <p>or login with</p>
        <div class="imgCont">
          <a href="/auth/google"><img class="google-logo" src="img/google-logo.png" alt="Login with Google"></a>
        </div>
        <p>Don't have an account yet? <a class="link" href="/signup">SignUp</a></p>
      </div>
    </div>